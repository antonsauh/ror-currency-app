<div class="container-fluid new-calculation-form-container">
    <h1 class="text-center">Update Your Calculation's Period</h1>
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <%= form_for @calculation, url: {action: "update"}, :html => {class: "new-calculation-form", role: "form"} do |f| %>
                <div class="form-group">
                <label for="Base Currency">Base Currency</label>
                    <div class="row">
                        <div class="col-lg-6">
                            <%= f.number_field(:base_amount, {:class => "form-control", :disabled => true}) %>
                        </div>
                        <div class="col-lg-6">
                            <%= f.select(:base_currency, ["AUD", "BGN", "BRL", "CAD", "CHF", "CNY", "CZK", "DKK", "EUR", "GBP", "HKD", "HRK", "HUF", "IDR", "ILS", "INR",
                            "JPY", "KRW", "MXN", "MYR", "NOK", "NZD", "PHP", "PLN", "RON", "RUB", "SEK", "SGD", "THB", "TRY", "USD", "ZAR"],{}, {:class => "form-control", :disabled => true} ) %>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                <label for="Target Currency">Convert Into</label>
                <%= f.select(:target_currency, ["AUD", "BGN", "BRL", "CAD", "CHF", "CNY", "CZK", "DKK", "EUR", "GBP", "HKD", "HRK", "HUF", "IDR", "ILS", "INR",
        "JPY", "KRW", "MXN", "MYR", "NOK", "NZD", "PHP", "PLN", "RON", "RUB", "SEK", "SGD", "THB", "TRY", "USD", "ZAR"],{}, {:class => "form-control", :disabled => true} ) %>
                </div>
                <div class="form-group">
                    <label for"Time Period">Period in Weeks</label>
                    <%= f.number_field :period, :in => 1..25, :step => 1, :class => "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.submit "Update", :class => "btn btn-primary", :type => "submit"%>
                </div>
            <% end %>
        </div>
    </div>
</div>