<div class="container-fluid login-container">
  <div class="row">
    <div class="col-lg-10 offset-1">  
      <h2>Log in</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 offset-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html =>{class: "login-form"}) do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-lg-2">
              <%= f.label :login %>
          </div>
            </div>
          <div class="row">
            <div class="col-lg-2">
              <%= f.text_field :login %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-lg-2">
              <%= f.label :password %>
          </div>
            </div>
          <div class="row">
            <div class="col-lg-2">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
              </div>
            </div>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "Log in", :class => "btn btn-primary", :type => "submit" %>
        </div>
      <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-10 offset-1">
          <%= render "devise/shared/links" %>
        </div>
      </div>
</div>
